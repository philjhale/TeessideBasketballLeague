@model DateTime?

@{           
    string name = ViewData.TemplateInfo.HtmlFieldPrefix;
    string id = name.Replace(".", "_");
    string niceDateTime = Model != null ? Model.Value.ToShortDateString() : "";
}


@Html.TextBox("", niceDateTime)

<script type="text/javascript">
    $(document).ready(function () {
        $("#@id").datepicker({
                dateFormat: "dd/mm/yy",
                changeMonth: "true",
                changeYear: "true"
            });
    });
</script>



