<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>TBL - @ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/Images/favicon.ico")" type="image/x-icon" />

    @*<link href="@Url.Content("~/Content/Css/Blueprint/screen.css")" rel="stylesheet" type="text/css" media="screen, projection" />
     <link href="@Url.Content("~/Content/Css/Style.css")" rel="stylesheet" type="text/css" media="screen, projection" />
    <link href="@Url.Content("~/Content/Css/Slider.css")" rel="stylesheet" type="text/css" media="screen, projection" />
    <link href="@Url.Content("~/Content/Themes/Smoothness/jquery-ui-latest.custom.css")" rel="stylesheet" type="text/css" media="screen, projection" />
    <link href="@Url.Content("~/Content/Elrte/elrte.min.css")" rel="stylesheet" type="text/css" media="screen, projection" />*@

    <link href="@Url.Content("~/Content/Css/cssBundle.min.css")" rel="stylesheet" type="text/css" media="screen, projection" />
    <link href="@Url.Content("~/Content/Css/Blueprint/print.css")" rel="stylesheet" type="text/css" media="print"/>
    <!--[if lt IE 8]><link href="@Url.Content("~/Content/Css/Blueprint/ie.css")" rel="stylesheet" type="text/css" media="screen, projection" /><![endif]-->

    @*<script src="@Url.Content("~/Scripts/jquery-latest.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-latest.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/easySlider1.7.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/elrte.min.js")"></script>
	<script type="text/javascript" src="@Url.Content("~/Scripts/Common.min.js")"></script>*@
    <script type="text/javascript" src="@Url.Content("~/Scripts/jsBundle.min.js")"></script>
	
    @RenderSection("meta", required: false)
</head>
<body>
    @*@{ int i = 0; int b = 1;}
    @(b/i)*@
  	<div class="container">
        <div class="span-1">&nbsp;</div>
        <div class="span-22" id="innerContainer">

            <div id="header" class="span-22 last">
                <div id="adminMenu">
                    <div class="prepend-1 span-18 ">
                        @if (Request.IsAuthenticated)
                        {
                            if(ViewBag.IsAdmin)
                            {
                                @Html.Partial("_AdminMenu")  
                            }
                            else if (ViewBag.IsFixtureAdmin)
                            {
                                @Html.Partial("_FixtureAdminMenu")  
                            }
                            else if (ViewBag.IsTeamAdmin)
                            {
                                @Html.Partial("_TeamAdminMenu")  
                            }
                        }
                        else
                        {
                            <text>&nbsp;</text>
                        }
                    </div>
                    <div class="span-2 append-1 last">
                        @if (Request.IsAuthenticated)
                        {
                            @("[ ") @Html.ActionLink("Log Off", "LogOff", "Account", new { Area = "" }, null) @(" ]")
                        }
                        else
                        {
                            @("[ ") @Html.ActionLink("Log On", "LogOn", "Account", new { Area = "" }, null) @(" ]")
                        }
                    </div> 
                </div>
                      
                <div id="innerHeader">
                    <span id="menu">
                        @Html.ActionLink("HOME", "Index", "Home", new { Area = "" }, null)
                        @Html.ActionLink("NEWS", "Index", "ViewNews", new { Area = "" }, null)
                        @Html.ActionLink("FIXTURES", "Index", "Fixtures", new { Area = "" }, null)
                        @Html.ActionLink("TEAMS", "Index", "Teams", new { Area = "" }, null)
                        @Html.ActionLink("STATS", "Players", "Stats", new { Area = "" }, null)
                    </span>
                </div>
            </div>

            <div class="clear"></div>

            <div class="prepend-1 span-20 append-1">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div>&nbsp;</div>
                    <div class="success">@TempData["SuccessMessage"]</div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div>&nbsp;</div>
                    <div class="error">@TempData["ErrorMessage"]</div>
                }
            </div>
                        
            @RenderBody()
            
            <div class="clear"></div>

            <div id="footer" class="span-22 last">
                <br />
                <p>
                    &copy; @Html.ActionLink("Phil Hale " + @DateTime.Now.Year, "Index", "ContactUs", new { Area = "" }, null) | 
                    @Html.ActionLink("About", "About", "Home", new { Area = "" }, null) | 
                    @Html.ActionLink("Version History", "VersionHistory", "Home", new { Area = "" }, null) |
                    @Html.ActionLink("Documents", "Index", "Documents", new { Area = "" }, null) | 
                    @Html.ActionLink("Links", "Index", "Links", new { Area = "" }, null) | 
                    <a href="http://itunes.apple.com/gb/app/teesside-basketball-league/id527718575?ls=1&mt=8">iPhone app</a> |
                    @Html.Partial("_MobileDesktopSiteSwitcher") |
                    @Html.ActionLink("Contact Us", "Index", "ContactUs", new { Area = "" }, null)
                </p>    
            </div>
        
        </div>
        @*innerContainer end*@
        <div class="span-1 last">&nbsp;</div>
    </div>

    @Html.Partial("_Analytics")
</body>
</html>
