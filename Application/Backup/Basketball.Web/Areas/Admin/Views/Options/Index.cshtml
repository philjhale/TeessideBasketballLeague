@model IEnumerable<Basketball.Domain.Entities.Option>

@{
    ViewBag.Title = "Option List";
}

<h1>Option</h1>

<table cellpadding="0" cellspacing="0" class="leagueTableHome">
    <tr>
        
        <th>
            Name
        </th>
        <th>
            Value
        </th>
		<th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
			@item.Name
        </td>
        <td>
			@item.Value
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>


