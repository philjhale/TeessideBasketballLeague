@model IEnumerable<Basketball.Domain.Entities.News>

@{
    ViewBag.Title = "News";
}

<h1>News</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table cellpadding="0" cellspacing="0" class="leagueTableHome">
    <tr>
        <th>
            Subject
        </th>
        <th>
            News Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
			@item.Subject
        </td>
        <td>
			@item.NewsDate.ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>


