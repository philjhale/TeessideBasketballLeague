@using Basketball.Common.Resources
@model IEnumerable<Basketball.Domain.Entities.CupWinner>

@{
    ViewBag.Title = "Cup Winners";
}

<h1>Cup Winners</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table cellpadding="0" cellspacing="0" class="leagueTableHome">
    <tr>
        
        <th>
            Cup
        </th>
        <th>
            Team
        </th>
		<th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
			@item.Season @item.Cup
        </td>
        <td>
			@item.Team
        </td>
        <td class="floatRight">
            @using (Html.BeginForm("Delete", "CupWinners", new { id = item.Id} ))
            { 
                 @Html.AntiForgeryToken()
                <input type="submit" value="Delete" onclick="return confirm('@FormMessages.DeleteConfirm');" />
            }
        </td>
    </tr>
}

</table>


