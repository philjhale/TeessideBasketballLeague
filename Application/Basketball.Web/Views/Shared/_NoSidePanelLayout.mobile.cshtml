<!DOCTYPE html> 
<html> 

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" /> 
	<title>TBL Mobile</title> 
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.1.1/jquery.mobile-1.1.1.min.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Css/Mobile.min.css")" />
	<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery-mobile-config.js" type="text/javascript"></script>
	<script type="text/javascript" src="http://code.jquery.com/mobile/1.1.1/jquery.mobile-1.1.1.min.js"></script>
    @RenderSection("meta", required: false)
</head> 

<body> 

<div data-role="page">
    
   	<div data-role="header" data-theme="d">
        @Html.ActionLink("Home", "Index", "Home", null, new { data_transition="flip", data_role="button", data_icon="home", data_prefetch="" })
        @RenderSection("header", false)
	</div>

	<div data-role="content" data-theme="d">	
        @RenderBody()
	</div>
	
	<div data-role="footer" data-theme="d">
        <div>
            &copy; Phil Hale @DateTime.Now.Year | @Html.Partial("_MobileDesktopSiteSwitcher")
        </div>
	</div>
	
</div>

@RenderSection("extraPages", false)

@Html.Partial("_Analytics")

</body>
</html>