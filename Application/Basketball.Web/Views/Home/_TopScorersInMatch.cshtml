 @model List<Basketball.Domain.Entities.PlayerFixture>
@using Basketball.Web.Helpers; 
 
@for (int i = 0; i < Model.Count; i++)
{
    @Html.PlayerLink(Model[i].Player.ShortName, Model[i].Player.Id) @(Model[i].IsMvp == "Y" ? " (MVP)" : "")  @(" " + Model[i].PointsScored)
    @(i < Model.Count - 1 ? ", " : "")
}


