@using Basketball.Web.Areas.Admin.ViewModels
@model PlayerViewModel

@using Basketball.Common.Resources;

@{
    ViewBag.Title = "Edit Player";
}

<h1>Edit Player</h1>

@Html.Partial("_Warning")

<div class="span-10">
    @using (Html.BeginForm()) {
	    @*@Html.AntiForgeryToken()*@
	
	    @Html.Partial("_CreateOrEdit", Model)

        <p>
            <input type="submit" value="Save" />
        </p>
    }

    @if (Model != null && Model.Player.Id > 0)
    {
	    using (Html.BeginForm("Delete", "Players", new { id = Model.Player.Id} ))
	    { 
			    @Html.AntiForgeryToken()
		    <input type="submit" value="Delete" onclick="return confirm('@FormMessages.DeleteConfirm');" />
	    }
    }

    <p>
	    @Html.ActionLink("Back to list", "Index")
    </p>
</div>
<div class="span-10 last">
    <p>Did you mean?</p>
    <ul id="playerMatch">
    </ul>
</div>