@using Basketball.Common.Resources
@model IEnumerable<Basketball.Domain.Entities.CupLeague>

@{
    ViewBag.Title = "Cups In Leagues";
}

<h1>Cups In Leagues</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table cellpadding="0" cellspacing="0" class="leagueTableHome">
    <tr>
        
        <th>
            League
        </th>
        <th>
            Cup
        </th>
		<th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
			@Html.DisplayTextFor(_ => item.League).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Cup).ToString()
        </td>
        <td class="floatRight">
            @using (Html.BeginForm("Delete", "CupLeagues", new { id = item.Id} ))
            { 
                 @Html.AntiForgeryToken()
                <input type="submit" value="Delete" onclick="return confirm('@FormMessages.DeleteConfirm');" />
            }
        </td>
    </tr>
}

</table>


