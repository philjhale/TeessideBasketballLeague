@model IEnumerable<Basketball.Domain.Entities.Team>

@{
    ViewBag.Title = "Teams";
}

<h1>Teams</h1>

<p>
    @Html.ActionLink("Create New", "Create", new { area = "Admin"})
</p>
<table cellpadding="0" cellspacing="0" class="leagueTableHome">
    <tr>
        <th>
            Team Name
        </th>
        <th>
            Tip Off Time
        </th>
        <th>
            Game Day
        </th>
		<th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
			@item.TeamNameLong
        </td>
        <td>
			@item.TipOffTime
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.GameDay).ToString()
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>


